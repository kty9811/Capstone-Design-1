<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예약할 메뉴를 선택해주세요"
        android:fontFamily="@font/a"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/booking_basic"
        android:text="Button" />

    <Button
        android:id="@+id/button7"
        android:background="@drawable/booking_walk"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Button" />

    <Button
        android:id="@+id/button8"
        android:background="@drawable/booking_cat"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Button" />

    <Button
        android:id="@+id/button9"
        android:background="@drawable/booking_pickup"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Button" />
</LinearLayout>